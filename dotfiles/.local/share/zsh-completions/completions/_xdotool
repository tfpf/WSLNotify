#compdef xdotool

if [ $CURRENT -eq 2 ]
then
    local completions=(
        behave behave_screen_edge click exec get_desktop get_desktop_for_window get_desktop_viewport get_num_desktops
        getactivewindow getdisplaygeometry getmouselocation getwindowfocus getwindowgeometry getwindowname getwindowpid
        help key keydown keyup mousedown mousemove mousemove_relative mouseup search selectwindow set_desktop
        set_desktop_for_window set_desktop_viewport set_num_desktops set_window sleep type version windowactivate
        windowclose windowfocus windowkill windowmap windowminimize windowmove windowraise windowreparent windowsize
        windowunmap
    )
    compadd -a completions -o nosort
fi
